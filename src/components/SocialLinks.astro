---
interface SocialLinksProps {
  linkedin?: string
  twitter?: string
  url?: string
  github?: string
  bluesky?: string
}

interface Props {
  links: SocialLinksProps
}

const links = Astro.props.links

const linkedin = links.linkedin
const twitter = links.twitter
const url = links.url
const github = links.github
